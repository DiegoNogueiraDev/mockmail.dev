# =============================================================================
# MockMail.dev - Variáveis de Ambiente (Homologação)
# =============================================================================
# Copie este arquivo para .env.homologacao e configure os valores
# =============================================================================

# Ambiente
NODE_ENV=production
ENVIRONMENT=homologacao

# =============================================================================
# MONGODB
# =============================================================================
MONGO_PASSWORD=sua_senha_mongodb_segura_aqui

# =============================================================================
# REDIS
# =============================================================================
REDIS_PASSWORD=sua_senha_redis_segura_aqui

# =============================================================================
# POSTGRESQL
# =============================================================================
POSTGRES_PASSWORD=sua_senha_postgres_segura_aqui

# =============================================================================
# JWT
# =============================================================================
JWT_SECRET=sua_chave_jwt_muito_segura_com_pelo_menos_32_caracteres
JWT_REFRESH_SECRET=sua_chave_refresh_muito_segura_com_pelo_menos_32_caracteres
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# =============================================================================
# URLs
# =============================================================================
NEXT_PUBLIC_API_URL=https://api.homologacao.mockmail.dev
CORS_ORIGIN=https://homologacao.mockmail.dev

# =============================================================================
# LOGS
# =============================================================================
LOG_LEVEL=debug
