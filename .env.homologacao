# =============================================================================
# MockMail.dev - Variáveis de Ambiente (Homologação)
# =============================================================================
# ⚠️  Configure todas as senhas e secrets antes de usar!
# Use: openssl rand -base64 32 para gerar senhas
# =============================================================================

# Ambiente
NODE_ENV=production
ENVIRONMENT=homologacao
VERSION=1.0.0

# =============================================================================
# MONGODB
# =============================================================================
# Gere com: openssl rand -base64 32
MONGO_PASSWORD=SUBSTITUA_POR_SENHA_SEGURA_MONGODB_HML

# =============================================================================
# REDIS
# =============================================================================
# Gere com: openssl rand -base64 32
REDIS_PASSWORD=SUBSTITUA_POR_SENHA_SEGURA_REDIS_HML

# =============================================================================
# POSTGRESQL
# =============================================================================
# Gere com: openssl rand -base64 32
POSTGRES_PASSWORD=SUBSTITUA_POR_SENHA_SEGURA_POSTGRES_HML

# =============================================================================
# JWT (CRÍTICO - Segurança da Autenticação)
# =============================================================================
# Gere com: openssl rand -base64 64
JWT_SECRET=SUBSTITUA_POR_CHAVE_JWT_MUITO_SEGURA_HML_64_CARACTERES
JWT_REFRESH_SECRET=SUBSTITUA_POR_CHAVE_REFRESH_MUITO_SEGURA_HML_64_CARACTERES
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# =============================================================================
# CSRF (CRÍTICO - Proteção contra CSRF)
# =============================================================================
# Gere com: openssl rand -base64 32
CSRF_SECRET=SUBSTITUA_POR_CHAVE_CSRF_SEGURA_HML

# =============================================================================
# URLs - HOMOLOGAÇÃO
# =============================================================================
NEXT_PUBLIC_API_URL=https://api.homologacao.mockmail.dev
NEXT_PUBLIC_APP_URL=https://homologacao.mockmail.dev
CORS_ORIGIN=https://homologacao.mockmail.dev
ALLOWED_ORIGINS=https://homologacao.mockmail.dev,https://api.homologacao.mockmail.dev

# =============================================================================
# COOKIES
# =============================================================================
COOKIE_DOMAIN=homologacao.mockmail.dev
COOKIE_SECURE=true
COOKIE_SAME_SITE=lax

# =============================================================================
# LOGS
# =============================================================================
# Use 'debug' em homologação para mais detalhes
LOG_LEVEL=debug

# =============================================================================
# EMAIL PROCESSING
# =============================================================================
EMAIL_RETENTION_DAYS=30
MAX_EMAILS_PER_BOX=1000
MAX_BOXES_PER_USER=50

# =============================================================================
# RATE LIMITING
# =============================================================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
AUTH_RATE_LIMIT_MAX=20
