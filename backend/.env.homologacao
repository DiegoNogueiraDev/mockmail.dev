# =============================================================================
# MockMail.dev - Backend (Homologação)
# =============================================================================
# Copie para o servidor de homologação e configure os valores reais
# =============================================================================

# Server Configuration
PORT=3010
NODE_ENV=production
ENVIRONMENT=homologacao

# PostgreSQL Configuration (Primary Database via Prisma)
DATABASE_URL=postgresql://mockmail:${POSTGRES_PASSWORD}@localhost:5433/mockmail_hml

# MongoDB Configuration
MONGO_URI=mongodb://app_user:${MONGO_PASSWORD}@localhost:27018/mockmail_hml?authMechanism=SCRAM-SHA-256&authSource=mockmail_hml&retryWrites=true&w=majority

# Redis Configuration (Sessions, Cache, Rate Limiting)
REDIS_URL=redis://:${REDIS_PASSWORD}@localhost:6380

# JWT Configuration
JWT_SECRET=SUBSTITUA_POR_CHAVE_JWT_SEGURA_HOMOLOGACAO
JWT_REFRESH_SECRET=SUBSTITUA_POR_CHAVE_REFRESH_SEGURA_HOMOLOGACAO
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d

# CSRF Configuration
CSRF_SECRET=SUBSTITUA_POR_CHAVE_CSRF_SEGURA_HOMOLOGACAO
CSRF_COOKIE_NAME=mockmail_csrf_token

# Cookie Configuration
COOKIE_DOMAIN=homologacao.mockmail.dev
COOKIE_SECURE=true
COOKIE_SAME_SITE=lax

# CORS Configuration
ALLOWED_ORIGINS=https://homologacao.mockmail.dev,https://api.homologacao.mockmail.dev

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
AUTH_RATE_LIMIT_MAX=20

# Email Processing
EMAIL_RETENTION_DAYS=30
MAX_EMAILS_PER_BOX=1000
MAX_BOXES_PER_USER=50

# Logs (debug para homologação)
LOG_LEVEL=debug
POSTGRES_URI=postgresql://mockmail:${POSTGRES_PASSWORD}@localhost:5433/mockmail_hml
